                    @Html.DisplayFor(modelItem => item.LoaiHopDong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrangThai)
                </td>
                <td class="btn-group">
                    @Html.ActionLink("Edit", "Edit", new { id = item.MaNhanVien }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Details", "Details", new { id = item.MaNhanVien }, new { @class = "btn btn-primary" }) 
                    @Html.ActionLink("Delete", "Delete", new { id = item.MaNhanVien }, new { @class = "btn btn-primary" })
